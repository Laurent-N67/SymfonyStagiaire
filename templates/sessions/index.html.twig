{% extends 'base.html.twig' %}

{% block title %}Liste des sessions{% endblock %}

{% block body %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th colspan='3'><h1>Liste des sessions</h1><p>Il y a {{sessions | length }} sessions</p></th>
            </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
            <tr>
                <td><a href="{{ path('show_sessions', {'id': session.id}) }}">{{ session }}</a>  </td>
                <td><a href="{{ path('update_sessions', {'id': session.id}) }}"> Modifier</a></td>
                <td><a href="{{ path('delete_sessions', {'id':session.id}) }}">Supprimer</a></td>
            </tr>
        {% endfor %}
         </tbody>
    </table>
    <table class="table table-striped">
        <tbody>
            <tr>
                <td><a href="{{ path('add_sessions') }}">Ajouter une session</a></td>
            </tr>
        </tbody>
    </table>
    

    
    
    
    

    

     
   
    
{% endblock %}
